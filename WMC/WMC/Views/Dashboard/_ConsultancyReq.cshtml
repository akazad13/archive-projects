@model IEnumerable<WMC.Models.Consultation>

<div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-xl" id="consultationList">

        <div class="row g-3 mb-4 align-items-center justify-content-between">
            <div class="col-9">
                <h1 class="app-page-title mb-0">Consultation Requests</h1>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-primary float-right" id="reqForConsultation" style="color: #fff">Request for Consultation</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table id="consultationReqsTable" class="table data-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Service Name</th>
                            <th>Consultation Date</th>
                            <th>Waster Management Issue</th>
                            <th>Consultation Status</th>
                            <th>Remarks</th>
                            <th>File</th>
                            <th style='@(ViewBag.role == "customer"? "display:none" : "")'>Action</th>
                        </tr>
                    </thead>
                    <tbody class="grid-table-body">
                        @{
                            int i = 0;
                        }
                        @foreach (var item in Model)
                        {
                            i += 1;
                            <tr>
                                <td>@(i)</td>
                                <td>@item.ServiceName</td>
                                <td>@(item.ConsultationDate.ToShortDateString())</td>
                                <td>@item.Issue</td>
                                <td>@item.Status</td>
                                <td>@item.Remarks</td>
                                <td><button type="button" class="btn btn-primary" onclick="viewFile(@item.Id)" style="color: #fff">View File</button></td>
                                <td style='@(ViewBag.role == "customer"? "display:none" : "")'><button type="button" class="btn btn-primary" onclick="updateReq(@item.Id)" style="color: #fff">View</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="container-xl" id="addConsultationDiv"></div>
</div>