<div class="app-auth-body mx-auto w-75" style="background: #fff; padding: 20px">
    <h2 class="app-page-title mb-4">Upload Resume</h2>

    <div class="auth-form-container text-start mx-auto" >
        <form enctype="multipart/form-data" class="auth-form auth-signup-form" id="uploadFile" asp-action="AddUpdateUploadedFile" asp-controller="Dashboard" method="post">
            <input id="fileUploadId" name="id" type="text" class="form-control signup-name" value="0" hidden>
            <div class="email mb-3">
                 <label class="sr-only" for="doc">Upload Doc</label>
                <input id="doc" name="doc" type="file" class="form-control signup-name" required="required">
            </div>

            <div class="text-center">
                <button type="submit" class="btn app-btn-primary w-25 theme-btn mx-auto">SUBMIT</button>
            </div>
        </form>
    </div>
</div>