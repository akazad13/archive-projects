@model TakeItToTheCloud.Models.User

<div class="app-auth-body mx-auto w-75" style="background: #fff; padding: 20px">
    <h2 class="app-page-title mb-4">Profile</h2>

    <div class="auth-form-container text-start mx-auto">
            <div class="email mb-3 row">
                <div class="col-4">First Name</div>
                <div class="col-8">@Model.FirstName</div>
            </div>
            <div class="email mb-3 row">
                <div class="col-4">Last Name</div>
                <div class="col-8">@Model.LastName</div>
            </div>
            <div class="email mb-3 row">
                <div class="col-4">Email</div>
                <div class="col-8">@Model.Email</div>
            </div>
            <div class="email mb-3 row">
                <div class="col-4">About me</div>
                <div class="col-8">@Model.About</div>
            </div>
    </div>
</div>